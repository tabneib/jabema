import de.anomic.ftpd.ftpdControl;
import java.io.File;

/* The following is for testing 2 instrumentation points
 * with a single pointcut declaration, e.g., to compare
 * size increases caused by instrumentation. */
pointcut fileOpCheck(ftpdControl control, File file > boolean):
	(call(boolean eventDownloadFilePre(File))
		|| call(boolean eventUploadFilePre(File)))
	&& target(control) && args(file);
